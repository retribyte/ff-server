datasource db {
    provider    = "sqlite"
    url         = env("DATABASE_URL")
}

generator client {
    provider    = "prisma-client-js"
}

model User {
    id          Int         @id @default(autoincrement())
    username    String      @unique
    email       String?     @unique
    password    String      // hashed using bcrypt?
    icon        String?     // If null, use identicon?
    wikiUser    String?
}
