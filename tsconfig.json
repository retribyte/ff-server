{
    "compilerOptions": {
        "target": "es6",
        "module": "es6",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "rootDir": "src",
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "paths": {
            "@prisma/client": ["./node_modules/@prisma/client"]
        },
        "baseUrl": "src"
    },
    "include": [
        "src/**/*",
        "src"
    ],
    "exclude": ["node_modules", "**/*.spec.ts"]
}