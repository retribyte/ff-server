{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "rootDir": "src",
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "paths": {
            "@prisma/client": ["./node_modules/@prisma/client"]
        },
        "baseUrl": "src"
    },
    "include": ["src/**/*", "src/server.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
